@model FiDa.ViewModels.BaseViewModel
@{
    ViewData["Title"] = "Dashboard";

    var currentUser = Model.Account;
}

<div class="min-w-full min-h-full space-y-5">
    <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-4 select-none">
        @foreach (var host in currentUser.ConfiguredHosts)
        {
            @await Component.InvokeAsync("StorageUsage", new { host })
        }
    </div>
    <div class="w-full px-4 h-1 bg-slate-600 rounded-full"></div>
    <div class="py-2">
        <div class="max-w-full space-y-2">
            <p class="text-2xl font-bold">Recently Uploaded Files</p>
            <hr class="bg-slate-600 h-1 rounded-full" />

        </div>
    </div>
    <div class="w-full px-4 h-1 bg-slate-600 rounded-full"></div>
</div>